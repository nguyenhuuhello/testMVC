<div class="form-search">
    <form method="GET" action="/news">
        {{!-- mặc định phương thức là GET
            với action, sau khi bấm tìm kiếm thì sẽ được chuyển tới news kèm với query parameter --}}
      <h2>Dùng Get để mở qua tab news</h2>
      <div class="mb-3">
        <label for="search-input" >Từ khóa</label>
        <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa...">
      </div>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

